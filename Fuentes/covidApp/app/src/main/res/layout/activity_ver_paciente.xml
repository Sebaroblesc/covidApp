<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPacienteActivity"
    android:orientation="vertical">
<include layout="@layout/toolbar"></include>

<TextView
    android:layout_width="match_parent"
    android:id="@+id/rut_view"
    android:layout_marginTop="@dimen/margin_top_texto"
    android:layout_height="wrap_content">
    
</TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nombre_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_top_texto"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apellido_view"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_top_texto"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/fecha_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_texto"></TextView>
   <TextView
       android:id="@+id/area_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_top_texto"></TextView>
    <TextView
        android:id="@+id/sintomas_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_texto"
        ></TextView>
    <TextView
        android:id="@+id/tos_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_texto"></TextView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/temp_view"
    android:layout_marginTop="@dimen/margin_top_texto"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/presion_view"
        android:layout_marginTop="@dimen/margin_top_texto"></TextView>
</LinearLayout>